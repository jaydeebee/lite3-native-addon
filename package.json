{
  "name": "@jaydeebee/lite3-native-addon",
  "version": "0.0.0-unreleased",
  "description": "Node.js bindings for lite3 (TRON) zero-copy serialization library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "prebuilds",
    "src",
    "deps/lite3/src",
    "deps/lite3/include",
    "deps/lite3/lib",
    "deps/lite3/LICENSE",
    "include",
    "binding.gyp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaydeebee/lite3-native-addon.git"
  },
  "scripts": {
    "prepare": "[ -f deps/lite3/include/lite3.h ] || git submodule update --init --recursive",
    "build:native": "node-gyp rebuild",
    "build:native:debug": "node-gyp rebuild --debug",
    "build:ts": "tsup",
    "build": "pnpm build:native && pnpm build:ts",
    "install": "prebuild-install || node-gyp rebuild",
    "prebuild": "prebuild --strip --runtime napi --target 9",
    "clean": "node-gyp clean && rm -rf dist prebuilds",
    "test": "vitest run",
    "test:watch": "vitest",
    "release:dry-run": "semantic-release --dry-run"
  },
  "keywords": [
    "serialization",
    "binary",
    "zero-copy",
    "native",
    "lite3",
    "tron"
  ],
  "license": "MIT",
  "gypfile": true,
  "binary": {
    "napi_versions": [
      9
    ]
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/bindings": "^1.5.5",
    "@types/node": "^20.0.0",
    "node-gyp": "^10.0.0",
    "prebuild": "^13.0.1",
    "semantic-release": "^25.0.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^8.5.0",
    "prebuild-install": "^7.1.3"
  }
}
